.post-contents
  .post-contents__header
    .post-contents__header--title
      =@school.company
    .post-contents__header--image
      =image_tag @school.image.url, width: "300px" 
  .post-contents__question
    %ul.post-contents__question--contents
      %li.post-contents__question--list
        =link_to "入校した理由",admission_school_path(@school.id)
      %li.post-contents__question--list
        =link_to "メリット",merit_school_path(@school.id)
      %li.post-contents__question--list
        =link_to "デメリット",demerit_school_path(@school.id)
      %li.post-contents__question--list
        =link_to "入校した後のギャップ", gap_school_path(@school.id)
      %li.post-contents__question--list
        =link_to "金額",cost_school_path(@school.id)
      %li.post-contents__question--list
        =link_to "カリキュラムについて",curriculum_quality_school_path(@school.id)
      %li.post-contents__question--list
        =link_to "カリキュラム外の時間",out_of_learning_school_path(@school.id)
      %li.post-contents__question--list
        =link_to "就職活動",employment_school_path(@school.id)
