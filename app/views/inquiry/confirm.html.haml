=render 'layouts/header'

.inquiry
  .inquiry__contents
    .inquiry__contents--title
      %h1 問い合わせ確認画面
      = form_for @inquiry, :url => inquiry_thanks_path do |f|
        .inquiry__contents--name
          .form
            %label.form__label 名前：
            = f.hidden_field :name
            = @inquiry.name
        .inquiry__contents--name
          .form
            %label.form__label メールアドレス
            = f.hidden_field :email
            = @inquiry.email
        .inquiry__contents--name
          .form
            %label.form__label 問い合わせ内容
            = f.hidden_field :message
            = simple_format(@inquiry.message)
        .inquiry__contents--btn
          = f.submit '送信', class: 'btn btn-flat-border' 

=render 'layouts/footer'
